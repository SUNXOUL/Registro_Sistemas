@page "/Consulta"
@inject SistemaBLL SistemasBLL

<div class="container mt-3">           
  <table class="table  table-striped">
    <thead>
      <tr>
        <th>Sistema Id</th>
        <th>Nombre</th>
        <th>Ver</th>
      </tr>
    </thead>
    <tbody>
    @foreach(var item in SistemasBLL.GetList())
    {
      <tr>
        <td>@item.SistemaId</td>
        <td>@item.Nombre</td>
        <td><a href=@($"/Registro/{@item.SistemaId}")>Ver</a></td>
      </tr>
    }
    </tbody>
  </table>
</div>
